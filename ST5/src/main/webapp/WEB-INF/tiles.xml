			value="/WEB-INF/pages/basefragments/web/_header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer"
			value="/WEB-INF/pages/basefragments/web/_footer.jsp" />
	</definition>
	
	<definition name="base.definition.admin"
		template="/WEB-INF/pages/layouts/classic2.jsp">
		<put-attribute name="title" value="" />
